<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Navratri"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img9"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="370dp"
        android:layout_height="308dp"
        android:src="@drawable/dandiya"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Starting Date: 17-10-2022
                      Timing : 8:00 PM to 12:00 AM"

        android:textColor="#000000"
        android:textSize="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Ending date: 24-10-2022"


        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Description : Navaratri is a Hindu festival that spans nine nights (and ten days) and is celebrated ever.
"


        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Rules:
    1) Garba will be completed at 12 midnight.
    2) People outside the society are not allowed."



    android:textColor="#000000"
        android:textSize="20dp" />
</LinearLayout>